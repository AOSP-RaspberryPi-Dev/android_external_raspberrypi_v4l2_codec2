cc_test {
    name: "C2VDACompIntf_test",

    srcs: ["C2VDACompIntf_test.cpp"],

    shared_libs: [
        "libchrome",
        "libcutils",
        "liblog",
        "libstagefright_codec2",
        "libstagefright_codec2_vndk",
        "libstagefright_simple_c2component",
        "libutils",
        "libv4l2_codec2",
        "libv4l2_codec2_vda",
    ],

    cflags: [
        "-Werror",
